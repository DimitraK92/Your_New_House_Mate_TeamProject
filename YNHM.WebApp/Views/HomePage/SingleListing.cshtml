                                    <div class="inline-facts">
                                        <i class="fa fa-bed"></i>
                                        <div class="milestone-counter">
                                            <div class="stats animaper">
                                                <div class="num" data-content="0" data-num="@Model.Bedrooms">0</div>
                                            </div>
                                        </div>
                                        <h6>Bedrooms</h6>
                                    </div>
                                </div>
                                <!-- inline-facts end -->
                                <!-- inline-facts  -->
                                <div class="inline-facts-wrap">
                                    <div class="inline-facts">
                                        <i class="fa fa-money"></i>
                                        <div class="milestone-counter">
                                            <div class="stats animaper">
                                                <div class="num" data-content="0" data-num="@Model.Rent">0</div>
                                            </div>
                                        </div>
                                        <h6>Rent per Month</h6>
                                    </div>
                                </div>
                                <!-- inline-facts end -->
                            </div>
                            <div class="list-single-main-item fl-wrap">
                                <div class="list-single-main-item-title fl-wrap">
                                    <h3>Amenities</h3>
                                </div>
                                <div class="listing-features fl-wrap">
                                    <ul>
                                        @if (Model.ElevatorInBuilding)
                                        {
                                            <li><i class="fa fa-rocket"></i> Elevator in building</li>
                                        }
                                        @if (Model.FreeWiFi)
                                        {
                                            <li><i class="fa fa-wifi"></i> Free Wi Fi</li>
                                        }
                                        @if (Model.Parking)
                                        {
                                            <li><i class="fa fa-motorcycle"></i> Free Parking</li>
                                        }
                                        @if (Model.AirCondition)
                                        {
                                            <li><i class="fa fa-cloud"></i> Air Conditioned</li>
                                        }
                                        @if (Model.PetFriendly)
                                        {
                                            <li><i class="fa fa-paw"></i> Pet Friendly</li>
                                        }
                                        @if (Model.OutdoorSeating)
                                        {
                                            <li><i class="fa fa-tree"></i> Outdoor Seating</li>
                                        }
                                        @if (Model.OutdoorSeating)
                                        {
                                            <li><i class="fa fa-tree"></i> Outdoor Seating</li>
                                        }
                                        @if (Model.WheelchairFriendly)
                                        {
                                            <li><i class="fa fa-wheelchair"></i> Wheelchair Friendly</li>
                                        }
                                        @if (!Model.AirCondition && !Model.ElevatorInBuilding && !Model.FreeWiFi && !Model.OutdoorSeating && !Model.Parking && !Model.PetFriendly && !Model.WheelchairFriendly){
                                            <li>No amenities available. For any questions, contact the owner.</li>
                                        }
                                    </ul>
                                </div>
                                @*<span class="fw-separator"></span>
                                <div class="list-single-main-item-title fl-wrap">
