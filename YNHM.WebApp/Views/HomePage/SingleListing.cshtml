<!-- ====================================
———	LISTING DETAILS CAROUSEL
===================================== -->
<section>
    <div class="owl-carousel owl-theme listing-details-carousel nav-light-dark">

        @foreach (var img in Model.Photos)
        {
            <div class="single-item">
                <a class="overlay-dark" href="@img.PhotoUrl" data-fancybox="gallery"
                   data-caption="Caption for single image">
                    <img class="lazyestload" data-src="@img.PhotoUrl" src="@img.PhotoUrl" alt="Image" />
                </a>
            </div>
        }
    </div>
</section>

