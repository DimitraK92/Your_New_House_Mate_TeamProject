                                <div class="inline-facts-wrap">
                                    <div class="inline-facts">
                                        <i class="fa fa-home"></i>
                                        <div class="milestone-counter">
                                            <div class="stats animaper">
                                                <div class="num" data-content="0" data-num="@Model.Area">0</div>
                                            </div>
                                        </div>
                                        <h6>Area</h6>
                                    </div>
                                </div>
                                <!-- inline-facts end -->
