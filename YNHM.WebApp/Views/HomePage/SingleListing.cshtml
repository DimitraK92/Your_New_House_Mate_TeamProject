                                            </div>
                                            <div class="col-md-4">
                                                <div class="fl-wrap list-single-header-column">
                                                    <span class="viewed-counter"><i class="fa fa-eye"></i> Viewed -  @Model.PageViews </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- list-single-header end -->
                            <div class="list-single-facts fl-wrap gradient-bg">
