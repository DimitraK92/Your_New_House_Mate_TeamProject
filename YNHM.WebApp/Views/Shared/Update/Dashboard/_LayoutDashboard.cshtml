<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>

    @Styles.Render("~/Templates/Listty/StaticHTML/assets/basicStyle")
    @Styles.Render("~/Templates/Listty/StaticHTML/assets/mainStyle")

    @{

        //TODO: VASSILIS: Create separate method for styles and scripts or fix bundles
        var routeValues = HttpContext.Current.Request.RequestContext.RouteData.Values;
        if (routeValues.ContainsValue("Index"))
        {
            @Styles.Render("~/Templates/Listty/StaticHTML/assets/mainStyle")
        }
        else if (routeValues.ContainsValue("Houses") || routeValues.ContainsValue("People") || routeValues.ContainsValue("TakeTest"))
        {
            @Styles.Render("~/Templates/Listty/StaticHTML/assets/listingStyle");
        }
        else if (routeValues.ContainsValue("House"))
        {
            @Styles.Render("~/Templates/Listty/StaticHTML/assets/singleListing")
        }
        else if (routeValues.ContainsValue("Register"))
        {
            @Styles.Render("~/Templates/Listty/StaticHTML/assets/signupStyle")
        }
        else if (routeValues.ContainsValue("MatchDetails"))
        {
            @Styles.Render("~/Templates/Listty/StaticHTML/assets/pairsStyle")
        }
    }


    <!-- GOOGLE FONT --><!-- font-family: 'Mulish', sans-serif; --><!-- font-family: 'Poppins', sans-serif; -->
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@200;300;400;600;700;800;900&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- CUSTOM CSS -->
    @Styles.Render("~/Templates/Listty/StaticHTML/assets/styleAndColor")

    <!-- FAVICON -->
    <link href="~/Templates/Listty/StaticHTML/assets/img/favicon.png" rel="shortcut icon">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body id="body" class="body-wrapper boxed-menu">
    <!--HEADER-->
    @Html.Partial("~/Views/Shared/Update/Dashboard/_MainNavbarDashboard.cshtml")

    <div class="main-wrapper">
        @*@Html.Partial("~/Views/Shared/Update/Dashboard/_NavbarDashboard.cshtml")*@

        @RenderBody()
    </div>

    <!--FOOTER-->
    @Html.Partial("~/Views/Shared/Update/_FooterL.cshtml")


    @Scripts.Render("~/Templates/Listty/StaticHTML/assets/basicScripts")
    @{
        if (routeValues.ContainsValue("Index"))
        {
            @Scripts.Render("~/Templates/Listty/StaticHTML/assets/mainScripts")

        }
        else if (routeValues.ContainsValue("House"))
        {
            @Scripts.Render("~/Templates/Listty/StaticHTML/assets/houseScripts")

        }
        else if (routeValues.ContainsValue("People") || routeValues.ContainsValue("TakeTest"))
        {
            @Scripts.Render("~/Templates/Listty/StaticHTML/assets/peopleScripts")

        }
        else if (routeValues.ContainsValue("SingleListing"))
        {
            @Scripts.Render("~/Templates/Listty/StaticHTML/assets/singleListingScripts")
        }
        else if (routeValues.ContainsValue("Login") || routeValues.ContainsValue("PersonalProfile"))
        {
            @Styles.Render("~/Templates/Listty/StaticHTML/assets/loginScripts")
        }
        else if (routeValues.ContainsValue("Register"))
        {
            @Styles.Render("~/Templates/Listty/StaticHTML/assets/signupScripts")
        }
        else if (routeValues.ContainsValue("Test"))
        {
            @Styles.Render("~/Templates/Listty/StaticHTML/assets/scrollAndLazyLoad")
        }
        else if (routeValues.ContainsValue("MatchDetails"))
        {
            @Styles.Render("~/Templates/Listty/StaticHTML/assets/pairScripts")
        }
    }
    @Scripts.Render("~/Templates/Listty/StaticHTML/assets/scrollAndLazyLoad")


    <script>
        var d = new Date();
        var year = d.getFullYear();
        document.getElementById("copy-year").innerHTML = year;
    </script>
    <script src='~/Templates/Listty/StaticHTML/assets/js/listty.js'></script>
    @RenderSection("SearchBoxScripts", required: false)
</body>
</html>
