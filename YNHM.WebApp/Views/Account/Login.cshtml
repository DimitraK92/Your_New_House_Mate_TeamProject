@using YNHM.WebApp.Models
@model LoginViewModel

@{
    //Layout = "~/Views/Shared/Update/_LayoutL.cshtml";
    Layout = "~/Views/Shared/Update/Dashboard/_LayoutDashboard.cshtml";
}

<!-- ====================================
———	LOGIN PAGE
===================================== -->
<section class="py-7 py-md-10 bg-light ">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card">
                    <div class="bg-primary text-center py-4">
                        <h2 class="text-white mb-0 h4">Members Log In</h2>
                    </div>
                    <div class="card-body px-7 pt-7 pb-0">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()


                            //TODO: VASSILIS: fix validation messages

                            <div class="form-group mb-7">
                                @Html.LabelFor(m => m.Username)
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", aria_describedby = "emailHelp", autocomplete = "off" })
                                @*@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="form-group mb-7">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                            </div>
                            <div class="form-group d-flex justify-content-between align-items-center mb-7">
                                <button type="submit" class="btn btn-outline-primary text-uppercase">
                                    Log in
                                </button>
                                <a href="#FogotPassword">Fogot Password?</a>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent text-center py-3">
                        <p class="mb-0">Not a member yet? <a href="@Url.Action("Register","Account")" class="link">Sign up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>