@using YNHM.WebApp.Models

@model YNHM.WebApp.Models.CreateRoomieVM
@{
    Layout = "~/Views/Shared/Update/Dashboard/_LayoutDashboard.cshtml";
}


<!-- ====================================
———	MY PROFILE
===================================== -->
<section class="bg-light py-5 height100vh">
    <div class="container">
        <nav class="bg-transparent breadcrumb breadcrumb-2 py-4" aria-label="breadcrumb">
            <h2 class="font-weight-normal mb-4 mb-md-0">My Profile</h2>
            <ul class="list-unstyled d-flex p-0 m-0">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item"><a href="pricing-table.html">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">My Profile</li>
            </ul>
        </nav>
        <div class="row">
            <div class="col-md-5 col-lg-4">
                <div class="card card-profile">
                    <div class="card-profile-img py-6">
                        <img class="rounded-circle" data-src="~/Models/FakeImages/person5.jpg" src="~/Models/FakeImages/person5.jpg" alt="Image">
                    </div>
                    <form class="px-6">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="customFileLang" lang="es">
                            <label class="custom-file-label" for="customFileLang">Upload a Picture</label>
                        </div>
                    </form>
                </div>
            </div>


            <div class="col-md-7 col-lg-8">
                <div class="card">
                    <div class="card-body p-6">
                        <h2 class="font-weight-normal mb-4">Your Profile Information</h2>
                    </div>
                </div>
                @using (Html.BeginForm("CreateRoomie", "Manage", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="card">
                        <div class="card-body p-6">
                            <h3 class="font-weight-normal mb-4">About You</h3>

                            <div class="row">
                                <div class="form-group col-md-6 mb-6">
                                    @Html.LabelFor(m => m.FirstName)
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "firstNameProfile", placeholder = "First Name" })
                                </div>
                                <div class="form-group col-md-6 mb-6">
                                    @Html.LabelFor(m => m.LastName)
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "lastNameProfile", placeholder = "Last Name" })
                                </div>
                                <div class="form-group col-md-6 mb-6">
                                    @Html.LabelFor(m => m.Age)
                                    @Html.TextBoxFor(m => m.Age, new { @class = "form-control", placeholder = "Your Age" })
                                </div>
                                <div class="form-group col-md-6 mb-6">
                                    @Html.LabelFor(m => m.HasHouse)
                                    @Html.CheckBoxFor(m => m.HasHouse)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body p-6">
                            <h3 class="font-weight-normal mb-4">Social Networks</h3>

                            <div class="row">
                                <div class="form-group col-md-6 mb-6">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control", placeholder = "Email", })
                                </div>
                                <div class="form-group col-md-6 mb-6">
                                    @Html.LabelFor(m => m.Phone)
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Phone" })
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.Facebook)
                                    @Html.TextBoxFor(m => m.Facebook, new { type = "url", @class = "form-control", placeholder = "Facebook" })
                                </div>

                            </div>

                            <div class="mt-4">
                                <button class="btn btn-primary text-uppercase" type="submit">
                                    Save Changes
                                </button>
                            </div>
                        </div>
                    </div>

                }
                @{
                    //TODO: VASSILIS: Add password change form
                }
                <form>
                    <div class="card">
                        <div class="card-body p-6">
                            <h3 class="font-weight-normal mb-4">Update Password</h3>
                            <div class="row">

                                <div class="form-group col-12">
                                    <label for="currentPassword">Current Password</label>
                                    <input type="password" class="form-control" placeholder="********" autocomplete="current-password">
                                </div>
                                <div class="form-group col-12">
                                    <label for="newPassword">New Password</label>
                                    <input type="password" class="form-control" placeholder="New Password" autocomplete="new-password">
                                </div>
                                <div class="form-group col-12">
                                    <label for="confirmPassword">Confirm Password</label>
                                    <input type="password" class="form-control" placeholder="Confirm Password" autocomplete="new-password">
                                </div>
                                <div class="form-group col-12 mt-4">
                                    <button class="btn btn-outline-primary" type="button">Change Password</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>

<script>
    // Date object
    var today = new Date();

    // Current Date
    var date = today.getDate() + '/' + (today.getMonth() + 1) + '/' + today.getFullYear();

    document.getElementById("current_date").innerHTML = date;
</script>


