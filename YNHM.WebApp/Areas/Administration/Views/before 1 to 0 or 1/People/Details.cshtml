@model YNHM.Entities.Models.HouseSeeker
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <div class="page-header no-margin-bottom">
        <div class="container-fluid">
            <h2 class="h5 no-margin-bottom">Person Details</h2>
        </div>
    </div>
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Back to List", "Index")</li>
            <li class="breadcrumb-item">@Html.ActionLink("Edit", "Edit", new { id = Model.HouseSeekerId })</li>
        </ul>
    </div>
    <section class="no-padding-top">
        <div class="container-fluid">
            <div class="row">
                <!-- Form Elements -->
                <div class="col">
                    <div class="block">
                        <div class="block-body">
                            @using (Html.BeginForm(new { @class = "form-horizontal" }))
                            {
                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label">@Html.DisplayNameFor(model => model.PhotoUrl)</label>
                                    <div class="col-sm-9">
                                        <img style="max-width:150px" src="~/Models/FakeImages/person1.jpg" alt="Person Photo" />
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label">@Html.DisplayNameFor(model => model.FirstName)</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.FirstName)" disabled>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label">@Html.DisplayNameFor(model => model.LastName)</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.LastName)" disabled>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label">@Html.DisplayNameFor(model => model.Age)</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Age)" disabled>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label">@Html.DisplayNameFor(model => model.Description)</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Description)" disabled>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label">Contact Info</label>
                                    <div class="col-sm-9">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend"><span class="input-group-text"> @Html.DisplayNameFor(model => model.Phone):</span></div>
                                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Phone)" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend"><span class="input-group-text"> @Html.DisplayNameFor(model => model.Email):</span></div>
                                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Email)" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <div class="input-group-prepend"><span class="input-group-text"> @Html.DisplayNameFor(model => model.Facebook):</span></div>
                                                <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Facebook)" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label">Houses</label>
                                    <div class="col-sm-9">
                                        <ul class="list-unstyled">
                                            @*@foreach (var house in Model.OwnsHouses)
                                            {
                                                <li>@house.Title</li>
                                            }*@
                                        </ul>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <div class="col-sm-9 ml-auto">
                                        @Html.ActionLink("Edit", "Edit", new { id = Model.HouseSeekerId, @class = "btn btn-secondary" }) |
                                        @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>