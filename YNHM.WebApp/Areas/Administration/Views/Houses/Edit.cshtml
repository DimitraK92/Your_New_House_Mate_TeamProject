                                            @Html.EditorFor(model => model.Parking, new { htmlAttributes = new { @class = "checkbox-template" } })
                                            @Html.ValidationMessageFor(model => model.Parking, "", new { @class = "text-danger" })
                                            @Html.LabelFor(model => model.Parking)
                                        </div>
