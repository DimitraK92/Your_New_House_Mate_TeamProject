                                        </div>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <label class="col-sm-3 form-control-label">Accessibility &amp; Inclusion</label>
                                    <div class="col-sm-9">

                                        <div class="i-checks">
                                            @Html.EditorFor(model => model.PetFriendly, new { htmlAttributes = new { @class = "checkbox-template" } })
                                            @Html.ValidationMessageFor(model => model.PetFriendly, "", new { @class = "text-danger" })
