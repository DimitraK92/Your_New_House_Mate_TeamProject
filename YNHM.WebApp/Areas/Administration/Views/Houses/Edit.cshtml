                                        </div>
                                        <div class="i-checks">
                                            @Html.EditorFor(model => model.WheelchairFriendly, new { htmlAttributes = new { @class = "checkbox-template" } })
                                            @Html.ValidationMessageFor(model => model.WheelchairFriendly, "", new { @class = "text-danger" })
                                            @Html.LabelFor(model => model.WheelchairFriendly)
                                        </div>
                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <div class="col-sm-9 ml-auto">
                                        <button type="submit" class="btn btn-primary">Save changes</button> |
                                        @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>
</div>





































