                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="line"></div>
                                <div class="form-group row">
                                    <div class="col-sm-9 ml-auto">
                                        <button type="submit" class="btn btn-primary">Create</button> |
                                        @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })

                                    </div>
                                </div>
